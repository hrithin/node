<div class="container p-3 "
    style="width: 600px; height: 560px; border-style: solid; border-color: coral;  margin-top : 50px; border-radius: 25px;">
    <div class="container p-2 "
        style="width: 500px; background-color: margin-top : 50px; border-radius: 25px;">
        <form action="/products/admin/edit/do-edit/{{product._id}}" method="post" enctype="multipart/form-data">
        <h3 style="text-align:center; ">  Edit Here</h3>
            <div class="form-group p-2">
                <label for="pname">Product Name</label>
                <input type="text" class="form-control" id="pname" name="pname" value="{{product.pname}}">
            </div>

            <div class="form-group p-2">
                <label for="pcategory">Product Category</label>
                <input type="text" class="form-control" id="pcategory" name="pcategory" value="{{product.pcat}}">
            </div>

            <div class="form-group p-2">
                <label for="pdis">Product Description</label>
                <input type="text" class="form-control" id="pdis" name="pdis" value="{{product.pdis}}">
            </div>

            <div class="form-group p-2">
                <label for="pprice">Product Price</label>
                <input type="text" class="form-control" id="pprice" name="pprice" value="{{product.pprice}}">
            </div>

            <div class="form-group p-2">
                <label for="pfile">Product Image</label>
                <input type="file" class="form-control" id="pfile" name="pimage">
            </div>

            <div class="form-group p-3">
                <input type="Submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>
</div>