<link href="/stylesheets/bid.css" rel="stylesheet">

<div class="container mt-5 mb-3">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image"> <img src="/images/{{product.pimage}}" id="main_product_image"
                            width="500px"> </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 style="font-size: 50px;">{{product.pname}}</h3>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>{{product.pdis}}</p>
                    </div>
                    <h3 style="margin-top: 20px ;">Bid Opening : {{product.pprice}} Bid Coins</h3>

                    <h4 style="margin-top: 40px ; margin-left: 54px;"><i>
                            <p style="color:coral ;">Last Bidder : {{user.name}}</p>
                        </i></h4>




                    <form class="form-inline" style="margin-top: 28px ;" method="get" action="/bid/bid-pro/placed/{{product._id}}">
                        <div class="row">

                            <div class="col-lg-4 ">
                                <h4 style="margin-left: 50px ;">Current Bid : </h4>
                            </div>

                            <div class="col-lg-4"> <input class="form-control mr-sm-2" type="text"
                                    value="{{product.bidprice}}" aria-label="Search" style="max-width : 180px; " name="bid" >
                            </div>

                            <div class="col-lg-4 "><button class="btn btn-outline-success my-2 my-sm-0"
                                    type="submit">Place Your Bid</button></div>

                            <div class="col-lg-4"></div>
                            <div class="col-lg-4"></div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>